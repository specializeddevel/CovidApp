<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:theme="@style/AppTheme"
    tools:context=".GeoreferenciaActivity">



    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="83dp"
        android:layout_height="61dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/csralogotipo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/imageView"
        android:layout_width="83dp"
        android:layout_height="61dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        android:src="@mipmap/procosi"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="87dp"
        android:layout_height="62dp"
        android:layout_marginTop="8dp"
        android:layout_marginRight="10dp"
        android:src="@mipmap/cosudelogo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:id="@+id/layoutEnCasaIndependiente"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/border"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@+id/imageView3">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="171dp"
            android:layout_height="27dp"
            android:layout_marginTop="4dp"
            android:src="@mipmap/l_cuidarnosc"
            app:layout_constraintBottom_toTopOf="@+id/scrollView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="15dp"/>
        <!-- Texto en casa -->
        <TextView
            android:id="@+id/textViewEnCasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:text="@string/page_two_activity_enCasa"
            android:textAlignment="textStart"

            android:textSize="18sp"
            android:textStyle="bold" />

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/tbEnCasa"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:gravity="center"
            android:orientation="horizontal"
            app:selectionRequired="true"
            app:singleSelection="true">

            <Button
                android:id="@+id/buttonEnCasaSi"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="SI"
                android:textSize="20sp"
                app:icon="@drawable/ic_baseline_check_circle_outline_24" />

            <Button
                android:id="@+id/buttonEnCasaNo"
                style="@style/Widget.MaterialComponents.Button.TextButton.Icon"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="NO"
                android:textSize="20sp"
                app:icon="@drawable/ic_baseline_remove_circle_outline_24" />

        </com.google.android.material.button.MaterialButtonToggleGroup>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btEntrar"
            style="@style/Widget.MaterialComponents.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/my_color_dark"
            android:text="@string/page_one_activity_btn_continuar"
            app:icon="@drawable/ic_baseline_arrow_forward_24"
            android:layout_gravity="center"
            />
    </LinearLayout>



</androidx.constraintlayout.widget.ConstraintLayout>